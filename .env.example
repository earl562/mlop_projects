# PlotLot v2 — Environment Variables
# Copy to .env and fill in your values: cp .env.example .env

# PostgreSQL + pgvector (docker compose up -d db)
DATABASE_URL=postgresql+asyncpg://plotlot:plotlot@localhost:5432/plotlot

# HuggingFace Inference API (for embeddings)
HF_TOKEN=hf_your_token_here

# Geocodio (for address → coordinates)
GEOCODIO_API_KEY=

# LLM providers
GROQ_API_KEY=
OPENROUTER_API_KEY=

# MLflow experiment tracking
MLFLOW_TRACKING_URI=http://localhost:5000
MLFLOW_EXPERIMENT_NAME=plotlot-rag
